<h3>詳細ページ</h3>
<div class="review">
  <p><%= @lifestyle.title %></p>
  <p><%= @lifestyle.comment %></p>
</div>

<% @lifestyle.ltags.each do |tag| %>
    <span><%= tag.name %></span>
<% end %>

<p><%= @lifestyle.created_at %></p>
<% if user_signed_in? %>
  <% if current_user.already_liked?(@lifestyle) %>
    <%= link_to lifestyle_likea_path(@lifestyle), method: :delete do %>
      <p>いいねを取り消す</p><%= @lifestyle.likeas.count %>
    <% end %>
  <% else %>
    <%= link_to lifestyle_likeas_path(@lifestyle), method: :post do %>
      <p>いいね</p><%= @lifestyle.likeas.count %>
    <% end %>
  <% end %>
<% else %>
  <p>いいねの数 = </p><%= @lifestyle.likeas.count %>
<% end %>

<div class="comment-wrapper">
  <p>コメント一覧</p>
    <% @lcomments.each do |c| %>
      <div>
        <%= c.user.email unless c.user.blank? %>
        <br>
        <%= c.content %>
      </div>
        <br>
    <% end %>

    <% if user_signed_in? %>
      <%= form_with(model: [@lifestyle, @lcomment], local: true) do |f| %>
        <%= f.text_area :content %>
        <%= button_tag type: "submit" do %>
          <i class="far fa-comments"></i> コメントする
        <% end %>
      <% end %>
    <% end %>
</div>

