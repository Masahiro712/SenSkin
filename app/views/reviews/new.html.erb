<h1>NEWスキンケア</h>

<%= form_with(model: @review, local: true, html: { multipart: true }) do |f| %>
  <div class="field">
    <%= f.label :item, "商品名" %><br>
    <%= f.text_field :item %>
  </div>

  <div class="field">
    <%= f.label :price, "価格" %><br>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :comment, "コメント" %><br>
    <%= f.text_area :comment, rows: 5 %>
  </div>

  <div class='form-group'>
    <%= f.collection_check_boxes(:rtag_ids, Rtag.all, :id, :name) do |tag| %>
        <div class='form-check'>
            <%= tag.label class: 'form-check-label' do %>
                <%= tag.check_box class: 'form-check-input' %>
                <%= tag.text %>
            <% end %>
        </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :image, "画像アップロード" %><br>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する" %>
  </div>
<% end %>