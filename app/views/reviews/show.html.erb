<h3>詳細ページ</h3>
<div class="syo1">
  <p><%= image_tag @review.image_url, size: "250x200" if @review.image? %></p>
  <p><%= @review.item %></p>
  <p><%= @review.price %></p>

  
  <p><%= @review.comment %></p>

  <% @review.rtags.each do |rtag| %>
    <%= link_to rtag.name, rtag_reviews_path(rtag_id: rtag.id) %>
  <% end %>
  <%= link_to image_tag(@review.user.image.present? ? @review.user.image.url : "アイコン_unknown.png", style: "border-radius: 50%; width: 50px; height: 50px; object-fit:cover;"), mypage_user_path(@review.user.id) %>
  <%= @review.user.name %><br>
  <% if user_signed_in? %>
    <% if current_user.already_liked?(@review) %>
      <%= link_to review_like_path(id: @review.id, review_id: @review.id), data: { turbo_method: :delete } do %>
        <i class="far fa-heart"></i><%= @review.likes.count %>
      <% end %>
    <% else %>
      <%= link_to review_likes_path(id: @review.id, review_id: @review.id), data: { turbo_method: :post }  do %>
        <i class="far fa-heart"></i><%= @review.likes.count %>
      <% end %>
    <% end %>
  <% else %>
    <i class="far fa-heart"></i><%= @review.likes.count %>
  <% end %>

  <div class="comment">
    <% if user_signed_in? %>
      <%= form_with(model: [@review, @rcomment], local: true) do |f| %>
        <%= f.text_area :content %>
        <%= button_tag type: "submit" do %>
          <i class="far fa-comments"></i> コメントする
        <% end %>
      <% end %>
    <% end %>
    <p>コメント一覧</p>
    <div class="com">
      <% @rcomments.each do |c| %>
        <div>
          <%= image_tag(c.user.image.present? ? c.user.image.url : "アイコン_unknown.png", style: "border-radius: 50%; width: 50px; height: 50px; object-fit:cover;") %>
          <div class="comment-body">
            <div class="comment-user"><%= c.user.name unless c.user.blank? %></div>
            <div class="comment-content"><%= c.content %></div>
          </div>
        </div>
      <% end %>    
    </div>
  </div>
  <div class="hensyuu">
    <% if current_user == @review.user %>
      <p><%= link_to "編集する", edit_review_path(@review.id) %></p>
      <%= button_to "削除する", review_path(@review.id), method: :delete %>
    <% end %>
  </div>
</div>

<%= link_to "一覧に戻る", reviews_path %>