<h1>プロフィール変更</h1>

<%= form_with(model: @user, local: true, html: { multipart: true }) do |f| %>

    <%= f.label :image, "アイコン" %><br>
    <%= f.file_field :image, accept: "image/*" %><br>

    <%= f.label :"自己紹介" %><br>
    <%= f.text_area :selfintroduction, size: "30x5" %><br>


  <div>
    <%= f.submit "変更する" %>
  </div>
<% end %>